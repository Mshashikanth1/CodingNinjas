import java.util.Scanner;

public class Main {
	//https://www.codingninjas.com/studio/problems/sum-of-even-odd_624650?utm_source=striver&utm_medium=website&utm_campaign=a_zcoursetuf
	//Sum of even & odd

	public static void main(String[] args) {
		// Write your code here
		Scanner sc=new Scanner(System.in);
		int evenSum=0, oddSum=0, n=sc.nextInt();
		while(n>0){
			int dig=n%10;
			n=n/10;
			if(dig%2==0) evenSum+=dig;
			else oddSum+=dig;
		}
		System.out.print(evenSum+ " "+ oddSum);

	}
}
